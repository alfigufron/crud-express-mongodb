<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Express with MongoDB</title>
  <%- include('./includes/css.ejs') %>
</head>
<body>
  <div class="container">
    <div class="py-3 text-center">
      <h2>Data Siswa</h2>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <a href="/add" class="my-3 btn btn-secondary btn-block">Tambah Data</a>
        <table class="table text-center table-striped">
          <thead>
            <tr>
              <th>No</th>
              <th>Nomor Induk Siswa</th>
              <th>Nama</th>
              <th>Kelas</th>
              <th>Opsi</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(function(item, index) { %>
            <tr>
              <td><%= index+1 %></td>
              <td><%= item.nis %></td>
              <td><%= item.name %></td>
              <td><%= item.class %></td>
              <td>
                <a href="/edit/<%= item._id %>" class="btn btn-secondary">Edit</a>
                <form action="/delete/<%= item._id %>" method="post" class="d-inline">
                  <button class="btn btn-danger">Hapus</button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <%- include('./includes/js.ejs') %>
</body>
</html>