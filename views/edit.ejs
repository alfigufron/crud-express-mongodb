<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Data Siswa</title>
  <%- include('./includes/css.ejs') %>
</head>
<body>
  <div class="container">
    <div class="py-3 text-center">
      <h2>Edit Data Siswa</h2>
    </div>

    <div class="card shadow-sm">
      <div class="card-body">
        <form action="/update/<%= student._id %>" method="post">
          <div class="form-group">
            <label>NIS</label>
            <input type="number" name="nis" class="form-control" value="<%= student.nis %>">
          </div>

          <div class="form-group">
            <label>Nama Siswa</label>
            <input type="text" name="name" class="form-control" value="<%= student.name %>">
          </div>

          <div class="form-group">
            <label>Kelas</label>
            <select class="form-control" name="class">
              <option disabled>Pilih Opsi</option>
              <option
                value="X"
                <% if(student.class == 'X') { %> selected <% } %>
              >
              X
              </option>
              <option
                value="XI"
                <% if(student.class == 'XI') { %> selected <% } %>
              >
              XI
              </option>
              <option
                value="XII"
                <% if(student.class == 'XII') { %> selected <% } %>
              >
              XII
              </option>
            </select>
          </div>

          <button type="submit" class="btn btn-secondary btn-block">Simpan Perubahan Data</button>
          <a href="/" class="btn btn-danger btn-block">Kembali</a>
        </form>
      </div>
    </div>
  </div>
  
  <%- include('./includes/js.ejs') %>
</body>
</html>